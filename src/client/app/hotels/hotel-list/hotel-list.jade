ul
    li(ng-repeat="hotel in $ctrl.filterHotels= ($ctrl.hotels | filterHotel: $ctrl.filters.targetName | filterStar: $ctrl.filters.stars | filterNight: $ctrl.filters.price)")
        hotel-item(item='hotel')
    li(ng-show="$ctrl.filterHotels.length == 0")
        div.messageNoResult
            .iconNoResult
                i.fa.fa-exclamation-circle(aria-hidden='true')
            p No hay resultados para tu consulta. ¿Podrías intentar nuevamente?
        div.notFoundImage